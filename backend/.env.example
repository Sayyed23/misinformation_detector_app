# Google Cloud Configuration
GOOGLE_CLOUD_PROJECT=your-project-id
VERTEX_AI_REGION=us-central1
DOCUMENT_AI_LOCATION=us
DOCUMENT_AI_PROCESSOR_ID=your-processor-id
STORAGE_BUCKET=your-project-id.appspot.com

# Environment
ENVIRONMENT=development
PORT=8080

# Firebase Configuration
FIREBASE_PROJECT_ID=your-project-id
FIREBASE_PRIVATE_KEY_ID=your-private-key-id
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nyour-private-key\n-----END PRIVATE KEY-----\n"
FIREBASE_CLIENT_EMAIL=firebase-adminsdk-xxxx@your-project-id.iam.gserviceaccount.com
FIREBASE_CLIENT_ID=your-client-id
FIREBASE_AUTH_URI=https://accounts.google.com/o/oauth2/auth
FIREBASE_TOKEN_URI=https://oauth2.googleapis.com/token
FIREBASE_CLIENT_CERT_URL=https://www.googleapis.com/robot/v1/metadata/x509/firebase-adminsdk-xxxx%40your-project-id.iam.gserviceaccount.com

# API Keys (stored in Secret Manager in production)
VERTEX_AI_API_KEY=your-vertex-ai-key
VISION_API_KEY=your-vision-api-key
TRANSLATE_API_KEY=your-translate-api-key
GEMINI_API_KEY=your-gemini-api-key-here
# External APIs
FACTCHECK_ORG_API_KEY=your-factcheck-api-key
ALT_NEWS_API_KEY=your-altnews-api-key
BOOM_API_KEY=your-boom-api-key

# Database Configuration
BIGQUERY_DATASET=misinformation_analytics
FIRESTORE_DATABASE=default

# Security
JWT_SECRET_KEY=your-jwt-secret-key
CORS_ORIGINS=https://your-app.web.app,https://your-app.firebaseapp.com

# Logging
LOG_LEVEL=INFO
ENABLE_STRUCTURED_LOGGING=true

# Performance
MAX_WORKERS=4
REQUEST_TIMEOUT=300
UPLOAD_MAX_SIZE=10485760

# Feature Flags
ENABLE_REAL_TIME_PROCESSING=true
ENABLE_HARM_CLASSIFICATION=true
ENABLE_ANALYTICS=true
ENABLE_MULTILINGUAL_SUPPORT=true

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
BURST_LIMIT=10

# Cache Configuration
REDIS_URL=redis://localhost:6379
CACHE_TTL_SECONDS=3600